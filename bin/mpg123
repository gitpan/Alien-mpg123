#!/usr/bin/env perl
# PODNAME: mpg123
# ABSTRACT: Command mpg123 of Alien-mpg123

$|=1;

use strict;
use warnings;
use File::ShareDir ':ALL';
use Path::Class;

my $abs = file(dist_dir('Alien-mpg123'),'bin','mpg123')->cleanup->absolute;

exec($abs, @ARGV) or print STDERR "couldn't exec mpg123: $!";


__END__
